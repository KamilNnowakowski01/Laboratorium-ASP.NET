@model Contact
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container mt-5">
    <h2>Detalis Contact</h2>
        @Html.AntiForgeryToken()

        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", disabled="false"})
            </div>

            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Email)
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", disabled="false"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Subject)
            @Html.TextBoxFor(model => model.Subject, new { @class = "form-control" , disabled="false"})
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Message)
            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", rows = 5, disabled="false"})
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Priority)
            @Html.DropDownListFor(model => model.Priority, @Html.GetEnumSelectList<Priority>(), "Wybierz Priorytet", new { @class = "form-control" , disabled="false"})
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Date)
            @Html.TextBoxFor(model => model.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" , disabled="false"})
            </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Created)
            @Html.TextBoxFor(model => model.Created, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" , disabled="false"})
        </div>

        <div class="form-group p-2">
            <a class="btn btn-primary"
                asp-action="Index"
                asp-controller="Contact">
                Contacts
            </a>
        </div>
</div>