@{
}
<div class="container mt-5">
    <h2>Dodaj nowy komputer</h2>
    <form asp-controller="Computer" asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Processor" class="control-label">Processor</label>
            <input asp-for="Processor" class="form-control" />
            <span asp-validation-for="Processor" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MemoryRAM" class="control-label">Memory RAM</label>
            <input asp-for="MemoryRAM" class="form-control" />
            <span asp-validation-for="MemoryRAM" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GraphicsCard" class="control-label">Graphics Card</label>
            <input asp-for="GraphicsCard" class="form-control" />
            <span asp-validation-for="GraphicsCard" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Manufacturer" class="control-label">Manufacturer</label>
            <input asp-for="Manufacturer" class="form-control" />
            <span asp-validation-for="Manufacturer" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductionDate" class="control-label">Production Date</label>
            <input asp-for="ProductionDate" class="form-control" type="date" />
            <span asp-validation-for="ProductionDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>