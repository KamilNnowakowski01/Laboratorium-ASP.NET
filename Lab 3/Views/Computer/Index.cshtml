@model Dictionary<int, Computer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container mt-5">
    <h2>Lista Computer</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Processor</th>
                <th>Memory RAM</th>
                <th>Graphics Card</th>
                <th>Manufacturer</th>
                <th>Production Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Value.Name</td>
                    <td>@item.Value.Processor</td>
                    <td>@item.Value.MemoryRAM</td>
                    <td>@item.Value.GraphicsCard</td>
                    <td>@item.Value.Manufacturer</td>
                    <td>@item.Value.ProductionDate.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-primary"
                           asp-action="Edit"
                           asp-controller="Computer"
                           asp-route-id=@item.Value.Id>Edytuj</a>
                        <a class="btn btn-primary pl-1"
                           asp-action="Details"
                           asp-controller="Computer"
                           asp-route-id=@item.Value.Id>Szczegóły</a>
                        <a class="btn btn-primary pl-1"
                           asp-action="Delete"
                           asp-controller="Computer"
                           asp-route-id=@item.Value.Id>Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>