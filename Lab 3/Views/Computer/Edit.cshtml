@model Computer
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
    <div class="container mt-5">
        <h2>Edit Computer #@Model.Id</h2>
        <form asp-action="Edit" asp-controller="Computer" method="post" class="needs-validation" novalidate>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Processor" class="control-label">Processor</label>
                <input asp-for="Processor" class="form-control" value="@Model.Processor" />
                <span asp-validation-for="Processor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MemoryRAM" class="control-label">Memory RAM</label>
                <input asp-for="MemoryRAM" class="form-control" value="@Model.MemoryRAM" />
                <span asp-validation-for="MemoryRAM" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GraphicsCard" class="control-label">Graphics Card</label>
                <input asp-for="GraphicsCard" class="form-control" value="@Model.GraphicsCard" />
                <span asp-validation-for="GraphicsCard" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label">Manufacturer</label>
                <input asp-for="Manufacturer" class="form-control" value="@Model.Manufacturer" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductionDate" class="control-label">Production Date</label>
            <input asp-for="ProductionDate" class="form-control" type="date" value="@Model.ProductionDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>

        <div class="form-group p-2">
            <button type="submit" class="btn btn-warning">Edit</button>
            <a class="btn btn-secondary pl-1"
               asp-action="Index"
               asp-controller="Computer">Cancel</a>
            </div>
        </form>
    </div>
